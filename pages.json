{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "智能食谱",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/recipe/list",
      "style": {
        "navigationBarTitleText": "食谱列表",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/recipe/detail",
      "style": {
        "navigationBarTitleText": "食谱详情"
      }
    },
    {
      "path": "pages/recipe/create",
      "style": {
        "navigationBarTitleText": "创建食谱"
      }
    },
    {
      "path": "pages/recipe/edit",
      "style": {
        "navigationBarTitleText": "编辑食谱"
      }
    },
    {
      "path": "pages/recipe/search",
      "style": {
        "navigationBarTitleText": "搜索食谱"
      }
    },
    {
      "path": "pages/community/feed",
      "style": {
        "navigationBarTitleText": "美食社区",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/community/publish",
      "style": {
        "navigationBarTitleText": "发布动态"
      }
