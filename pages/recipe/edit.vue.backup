    uploadImage(filePath, callback) {
      uni.showLoading({ title: 'ä¸Šä¼ ä¸­...' })

      uni.uploadFile({
        url: 'http://127.0.0.1:8000/api/upload/',
        filePath: filePath,
        name: 'file',
        header: {
          'Authorization': `Bearer ${getToken()}`
